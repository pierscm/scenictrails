<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ales_krivec_2892"
    android:backgroundTint="@color/colorTint"
    android:backgroundTintMode="add"

    tools:context="com.mobileapps.lewisu.cassiepierson.scenictrails.HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_new_run_button"
        android:text="@string/start_new_run"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="20dp"
        android:onClick="newRunButtonClick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_previous_runs_button"
        android:text="@string/view_previous_runs"
        android:layout_gravity="center"
        android:padding="10dp"
        android:onClick="prevRunButtonClick"/>

</LinearLayout>
